
@model AppVeterinariaUCR.Models.Productos
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar</h1>


<dl class="row">
    @*Etiqueta*@
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => Model.Descrip)
    </dt>
    @*Dato*@
    <dd class="col-sm-10">
        @Html.DisplayFor(model => Model.Descrip)
    </dd>

    @*Etiqueta*@
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => Model.PrecioCompra)
    </dt>
    @*Dato*@
    <dd class="col-sm-10">
        @Html.DisplayFor(model => Model.PrecioCompra)
    </dd>

    @*Etiqueta*@
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => Model.PorImp)
    </dt>
    @*Dato*@
    <dd class="col-sm-10">
        @Html.DisplayFor(model => Model.PorImp)
    </dd>

    @*Etiqueta*@
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => Model.Foto)
    </dt>
    @*Dato*@
    <dd class="col-sm-10">
        <img src="@Model.Foto" alt="No se cargo la foto" class="img-fluid" />
    </dd>
</dl>

<form asp-action="Eliminar">
    <input type="hidden" asp-for="Id" />

    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#Confirmar">Eliminar</button>

    @*modal de confirmacion*@
    <div id="Confirmar" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="titulo" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title" id="titulo">Confirmar Accion</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body"> <p>Desea eliminar el producto @Model.Descrip ?</p></div>
                <div class="modal-footer">
                    <input type="submit" value="Aceptar" class="btn btn-danger" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>

            </div>

        </div>

    </div>

</form>

