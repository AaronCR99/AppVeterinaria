@model AppVeterinariaUCR.Models.Productos;

@{
    ViewData["Title"] = "Modificar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Modificar</h1>
<div class="row">
    <div class="col-md-4">
        @*Aqui construimos el formulario*@
        <form asp-action="Modificar" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*El id esta oculto por que no se puede modificar*@
            <input type="hidden" asp-for="Id" />

            @*solicitamos la descripcion*@
            <div class="form-group">
                <label asp-for="Descrip" class="control-label"></label>
                <input asp-for="Descrip" class="form-control" />
                <span asp-validation-for="Descrip" class="text-danger"></span>
            </div>

            @*solicitamos el PrecioCompra*@
            <div class="form-group">
                <label asp-for="PrecioCompra" class="control-label">Precio de Compra</label>
                <input asp-for="PrecioCompra" class="form-control" />
                <span asp-validation-for="PrecioCompra" class="text-danger"></span>
            </div>

            @*solicitamos el Porcentaje de impuestos*@
            <div class="form-group">
                <label asp-for="PorImp" class="control-label">Porcentaje de impuestos</label>
                <input asp-for="PorImp" class="form-control" />
                <span asp-validation-for="PorImp" class="text-danger"></span>
            </div>
            
           
            
    @*Aqui se solicita la foto*@
            <div class=" form-group">
                <label class="control-label">Foto</label>
                <input type="file" class="form-control" name="files" />
            </div>

            @*contenedor para el boton de aplicar*@
            <div class="form-group">
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalConfirmar">
                    Aplicar
                </button>
            </div>

            @*Aqui se construye el modal*@
            <div id="modalConfirmar" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true" 
                 aria-labelledby="titulo">

                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        @*Aqui se construye el encabezado*@
                        <div class="modal-header">
                            <h5 class="modal-title" id="titulo">Confirmar Accion</h5>
                        </div>
                        @*Aqui se construye el cuerpo*@
                        <div class="modal-body">
                            <p>Desea modificar el producto @Model.Descrip ?</p>
                        </div>
                        @*Aqui se muestran los controles de ventanas*@
                        <div class="modal-footer">
                            <input type="submit" value="Aplicar Cambios" class="btn btn-primary" />
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

