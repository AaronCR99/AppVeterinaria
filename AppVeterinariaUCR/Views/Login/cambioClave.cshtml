
@model AppVeterinariaUCR.Models.Usuarios;
@{
    ViewData["Title"] = "cambioClave";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>cambioClave</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-4">
            <div class="card">
                <div class="card-header">
                    <p class="card-title">Cambio de clave</p>
                </div>
                <div class="card-body">
                    @if (@TempData["mensaje"] != null)
                    {
                        <div class="alert alert-success">
                            <button type="button" class="close" data-dismiss="alert">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <strong>
                                @TempData["mensaje"]
                            </strong>

                        </div>
                    }


                    <form asp-action="CrearCuenta" method="post" class="Panel">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label">Digite su nueva contraseña </label>
                            <input asp-for="Password" class="form-control" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
          
                        <div class="form-group">
                            <input type="submit" value="Cambiar" class="btn btn-primary" asp-action="" asp-controller="Login" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-sm-4"></div>


    </div>

</div>