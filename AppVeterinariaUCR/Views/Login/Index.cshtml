@model AppVeterinariaUCR.Models.Usuarios;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Login</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-4">
            <form asp-action="index" class="Panel">
                <div class="form-group">
                    <label asp-for="Login" class="custom-control-label"></label>
                    <input asp-for="Login" class="form-control"/>
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="custom-control-label"></label>
                    <input  type="password" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <p>No tienes una cuenta?</p>
                    <a asp-controller="Login" asp-action="CrearCuenta">Cree una.</a>
                </div>
                <div class="form-group">
            
                    <input type="submit" value="Aceptar" class="btn btn-primary"/>
                
                </div>
            </form>
        </div>
        <div class="col-sm-4"></div>
    </div>

</div>
